{
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "simon"
    ],
    "env": {
        "browser": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "new-cap": "off"
    },
    "globals": {
        "VERSION": true
    }
}
